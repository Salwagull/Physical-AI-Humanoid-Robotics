<?xml version="1.0" ?>
<!--
Simple Differential Drive Robot Model for Gazebo

This SDF file defines a basic two-wheeled mobile robot with:
- A rectangular base
- Two driven wheels (left and right)
- Differential drive controller plugin
- Optional lidar sensor

Usage:
  gz sim simple_robot.sdf

Author: Physical AI & Humanoid Robotics Book
-->
<sdf version="1.8">
  <model name="simple_diff_drive_robot">

    <!-- ========== BASE LINK ========== -->
    <link name="base_link">
      <!-- Position: 10cm above ground -->
      <pose>0 0 0.1 0 0 0</pose>

      <!-- Physical properties -->
      <inertial>
        <mass>10.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <iyy>0.1</iyy>
          <izz>0.1</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>

      <!-- Collision geometry (for physics) -->
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.6 0.4 0.15</size>
          </box>
        </geometry>
      </collision>

      <!-- Visual geometry (what you see) -->
      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.6 0.4 0.15</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.5 0.8 1</ambient>
          <diffuse>0.2 0.5 0.8 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>
    </link>

    <!-- ========== LEFT WHEEL ========== -->
    <link name="left_wheel">
      <!-- Wheel positioned to the left of base, rotated 90° -->
      <pose>0 0.25 0.1 -1.5707 0 0</pose>

      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.005</ixx>
          <iyy>0.005</iyy>
          <izz>0.005</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>

      <collision name="left_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <!-- Friction properties for realistic wheel behavior -->
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="left_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ========== RIGHT WHEEL ========== -->
    <link name="right_wheel">
      <!-- Wheel positioned to the right of base, rotated 90° -->
      <pose>0 -0.25 0.1 -1.5707 0 0</pose>

      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.005</ixx>
          <iyy>0.005</iyy>
          <izz>0.005</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>

      <collision name="right_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="right_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ========== CASTER WHEEL (for stability) ========== -->
    <link name="caster">
      <pose>-0.25 0 0.05 0 0 0</pose>

      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>

      <collision name="caster_collision">
        <geometry>
          <sphere>
            <radius>0.05</radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.0</mu>
              <mu2>0.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="caster_visual">
        <geometry>
          <sphere>
            <radius>0.05</radius>
          </sphere>
        </geometry>
        <material>
          <ambient>0.5 0.5 0.5 1</ambient>
          <diffuse>0.5 0.5 0.5 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ========== JOINTS ========== -->

    <!-- Left wheel joint (revolute = rotating) -->
    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- Right wheel joint -->
    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- Caster joint (fixed to base) -->
    <joint name="caster_joint" type="fixed">
      <parent>base_link</parent>
      <child>caster</child>
    </joint>

    <!-- ========== DIFFERENTIAL DRIVE PLUGIN ========== -->
    <!--
    This plugin listens to /cmd_vel (Twist messages) and
    controls the left and right wheels to achieve desired
    linear and angular velocities.
    -->
    <plugin
      filename="gz-sim-diff-drive-system"
      name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.5</wheel_separation>
      <wheel_radius>0.1</wheel_radius>
      <odom_publish_frequency>50</odom_publish_frequency>
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>

  </model>
</sdf>
